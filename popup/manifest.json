{
    "manifest_version": 2,
    "name": "Screenshot Extension",
    "version": "1.0",
    "description": "Capture screenshots of the current tab.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  
